// .vscode/launch.json
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C Program with LLDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/clebsch_gordan_test",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "build C program",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for lldb",
                    "text": "settings set target.max-children-count 256",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
